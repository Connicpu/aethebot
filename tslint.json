{
    "defaultSeverity": "error",
    "extends": [
      "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
      "indent": [true, "spaces"],
      "semicolon": [true, "never"],
      "whitespace": [
			  true,
			  "check-branch",
        "check-decl",
        "check-operator",
        "check-module",
        "check-separator",
        "check-rest-spread",
        "check-type",
        "check-typecast",
        "check-type-operator",
        "check-preblock"
      ],
      "interface-name": [true, "never-prefix"]
    },
    "rulesDirectory": []
}
